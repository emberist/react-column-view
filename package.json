        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.4",
        "@types/uuid": "^8.3.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
